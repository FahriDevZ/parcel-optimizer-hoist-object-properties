{
  "$schema": "https://json.schemastore.org/eslintrc",
  "root": true,
  "parser": "@typescript-eslint/parser",
  "plugins": [
    "@typescript-eslint",
    "import",
    "prettier"
  ],
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "plugin:import/recommended",
    "prettier"
  ],
  "settings": {
    "import/resolver": {
      "node": {
        "extensions": [".js", ".ts"]
      }
    }
  },
  "env": {
    "node": true,
    "jest": true
  },
  "rules": {},
  "overrides": [
    // sample
    {
      "files": [
        "sample.js"
      ],
      "rules": {
        "no-unused-vars": "off"
      }
    }
  ]
}
