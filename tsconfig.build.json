{
  "compilerOptions": {
    "allowJs": true,
    "target": "es2021",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "strictNullChecks": true,
    "noImplicitAny": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": false,
    "composite": true,
    "outDir": "./dist",
    "rootDir": "./src"
  },
  "include": ["./src"]
}
